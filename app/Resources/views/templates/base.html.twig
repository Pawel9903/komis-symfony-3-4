<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Komis Samochodowy{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/custom.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    {% if is_granted('ROLE_ADMIN') %}
        {% include("templates/adminTopMenu.html.twig") %}
    {% elseif is_granted('ROLE_USER') %}
        {% include "templates/clientTopMenu.html.twig" %}
    {% else %}
        {% include "templates/annonymousTopMenu.html.twig" %}
    {% endif %}
    <div class="container my-5">
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        {% endblock %}
    </div>
    </body>
</html>
